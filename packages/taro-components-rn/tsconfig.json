
{
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "src/assets/weui.js"
  ],
  "exclude": [
    "src/**/demo/**",
    "src/**/Audio/**",
    "src/**/Video/**",
    "src/**/Map/**"
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "jsx": "react",
    "target": "es2015",
    "lib": [
      "es2015"
    ],
    "types": [
      "react",
      "react-native"
    ]
  }
}
